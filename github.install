<?php

/**
 * @file
 * Install file for github_projects module.
 */

/**
 * Implements hook_schema().
 */
function github_schema() {
  module_load_include('install', 'remote_entity');
  $schema = array();

  $schema['github_remote_repositories'] = remote_entity_schema_table('our remote repository entity type');

  return $schema;
}

/**
 * Implements hook_install().
 */
function github_install() {
  $vocabulary = (object) array(
    'name' => 'Github Repository Topics',
    'description' => 'Topics as set for repositories on github',
    'machine_name' => 'github_topics',
    'module' => 'github',
  );
  taxonomy_vocabulary_save($vocabulary);
}

/**
 * Implements hook_uninstall().
 */
function github_uninstall() {
  $vocabulary = taxonomy_vocabulary_machine_name_load('github_topics');
  taxonomy_vocabulary_delete($vocabulary->vid);
}
